<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RemoteActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/imgPower"
        android:background="@drawable/bg_monitor" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarRemote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@android:color/transparent"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="Midea"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <RelativeLayout
        android:id="@+id/rlTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRemote"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/seven_segment"
            android:text="0"
            android:textColor="@color/primary_text"
            android:textSize="120sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/tvTemp"
            android:fontFamily="@font/seven_segment"
            android:text="\u2103"
            android:textColor="@color/primary_text"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvTemp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/tvTemp"
            android:drawableTint="@color/primary_text"
            android:text=" Pendingin"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_ac_unit" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlTemp"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="42dp">

        <ImageView
            android:id="@+id/imgSpeed"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_speed_0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/imgSpeed"
            android:text="Kecepatan"
            android:textColor="@color/primary_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="42dp">

        <ImageView
            android:id="@+id/imgMode"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_speed_3" />

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/imgMode"
            android:text="Arah Bawah"
            android:textColor="@color/primary_text" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgPower"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_below="@id/rlSpeed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/ic_power"
        app:tint="@color/green" />

    <LinearLayout
        android:id="@+id/llTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPower"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/minTemp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_btn"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_min"
            app:tint="@color/monitor" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/suhu"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/addTemp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_btn"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add"
            app:tint="@color/monitor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/llTemp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnSwing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Swing"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnMode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Mode"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>